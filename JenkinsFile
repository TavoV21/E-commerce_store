pipeline{
    agent any
    
    stages{
       
        stage('docker login'){
            steps{

               withCredentials([string(credentialsId: 'DOCKER_TOKEN', variable: 'TOKEN')]) {
                    sh "
                        echo '$TOKEN' | docker login -u TavoV21 --password-stdin
                    "
                }
                    
                
                
            }

            post {
                success {
                    echo "✅ te loggeaste OMG"
                }
                failure {
                    echo "❌ algo anda mal"
                }
            }
        }
       
    }
}