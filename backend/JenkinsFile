pipeline{
    agent any
    tools {
        nodejs 'nodejs'
    }
    environment{
        DIR_BACKEND = 'backend'
    }
    stages{
        stage('Preparaci√≥n'){
            steps{
                sh 'node -v'
            }
        }
        stage('ubicando carpeta'){
            steps{
                dir(DIR_BACKEND){
                    sh "npm install -g yarn"
                    sh "yarn install"
                }
                
            }
        }
        stage('test'){
            steps{
                dir(DIR_BACKEND){
                    sh "yarn test tests/categories.test.mjs"
                }
            }
        }

    }
}