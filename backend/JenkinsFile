pipeline{
    agent any
    tools {
        nodejs 'nodejs'
    }
    stages{
        stage('PreparaciÃ³n'){
            steps{
                sh 'node -v'
                sh 'yarn -v'
            }
        }
        stage('ubicando carpeta'){
            steps{
                dir("backend"){
                    sh "yarn install"
                }
                
            }
        }
        stage('test'){
            steps{
                dir("backend"){
                    sh "yarn test tests/categories.test.mjs"
                }
            }
        }

    }
}